<div class="container-fluid">

      <div class="row">
        <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-4 col-md-8-offset-4">
            <h3><%= product.title %></h3>
            <%#= image_tag(cart_item.product.avatar.small.url, class: "thumbnail") %>
            <%= link_to(image_tag(product.avatar_url(:large)), product_path(product), class: "thumbnail") %>
        </div>
        <% end %>
      </div>

</div>
