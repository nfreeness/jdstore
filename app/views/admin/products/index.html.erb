<table class="table table-boldered">
  <tr>
    <td>商品</td>
    <td>价格</td>
    <td>操作</td>
  </tr>
  <% @products.each do |product| %>
  <tr>
    <td>
      <%= link_to(product.title, product_path(product)) %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= link_to("编辑商品", edit_product_path(product)) %>
      <%= link_to("下架商品", "#") %>
      <%= link_to("删除商品", product_path(product), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
    </td>
  </tr>
  <% end %>
</table>
